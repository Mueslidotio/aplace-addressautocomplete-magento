<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="script-aplace" type="host">https://aplace.io</value>
                <value id="script-aplace-api" type="host">https://api.aplace.io</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="connect-aplace-api" type="host">https://api.aplace.io</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="img-aplace" type="host">https://aplace.io</value>
                <value id="img-aplace-api" type="host">https://api.aplace.io</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>